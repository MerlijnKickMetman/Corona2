{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Duration</th>
                <th>Num_of_guests</th>
                <th>Start_date</th>
                <th>Comments</th>
                <th>Total_price</th>
                <th>Is_paid</th>
                <th>Payment_type</th>
                <th>Payment_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.Duration ? booking.Duration|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.NumOfGuests }}</td>
                <td>{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.Comments }}</td>
                <td>{{ booking.TotalPrice }}</td>
                <td>{{ booking.IsPaid ? 'Yes' : 'No' }}</td>
                <td>{{ booking.PaymentType }}</td>
                <td>{{ booking.PaymentDate ? booking.PaymentDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Create new</a>
{% endblock %}
