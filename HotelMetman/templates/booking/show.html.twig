{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ booking.Duration ? booking.Duration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Num_of_guests</th>
                <td>{{ booking.NumOfGuests }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ booking.Comments }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ booking.TotalPrice }}</td>
            </tr>
            <tr>
                <th>Is_paid</th>
                <td>{{ booking.IsPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Payment_type</th>
                <td>{{ booking.PaymentType }}</td>
            </tr>
            <tr>
                <th>Payment_date</th>
                <td>{{ booking.PaymentDate ? booking.PaymentDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
