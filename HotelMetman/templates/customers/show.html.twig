{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ customer.Title }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ customer.FullName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.Phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.Address }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ customer.Country }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ customer.Gender }}</td>
            </tr>
            <tr>
                <th>Date_of_birth</th>
                <td>{{ customer.DateOfBirth ? customer.DateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.Email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ customer.Username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ customer.Password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customers_index') }}">back to list</a>

    <a href="{{ path('customers_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customers/_delete_form.html.twig') }}
{% endblock %}
