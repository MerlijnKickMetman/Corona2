{% extends 'base.html.twig' %}

{% block title %}FoodOrders index{% endblock %}

{% block body %}
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Menu
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="{{ path('customers_index') }}">Customers</a>
    <a class="dropdown-item" href="{{ path('booking_index') }}">Booking</a>
    <a class="dropdown-item" href="{{ path('food_orders_index') }}">food orders</a>
    <a class="dropdown-item" href="{{ path('restaurant_index') }}">Restaurant</a>
    <a class="dropdown-item" href="{{ path('rooms_index') }}">Rooms</a>
  </div>
</div>
    <h1>FoodOrders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Persons</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food_order in food_orders %}
            <tr>
                <td>{{ food_order.id }}</td>
                <td>{{ food_order.Date ? food_order.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ food_order.Persons }}</td>
                <td>{{ food_order.Price }}</td>
                <td>
                    <a href="{{ path('food_orders_show', {'id': food_order.id}) }}">show</a>
                    <a href="{{ path('food_orders_edit', {'id': food_order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('food_orders_new') }}">Create new</a>
{% endblock %}
